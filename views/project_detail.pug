extends layout

block content
  // Title Section
  
  div.menu-icon 
    i.fa.fa-bars
      
  aside.sidenav
    include sidenav.pug
  
  // Tool, Material, and Budget Section
  div.main
  
    div.main-header
      div.main-header_heading
        h3 !{title}
      div.main-header_delete 
        form(method='POST' action=`/projects/delete`)
          div
            input(type='hidden', name='projectId', required='true', value=id)
          button(type='submit') Delete This Project
    
    div.main-overview
      // Add Tool Form
      div.overviewcard
        div.overviewcard-title 
          h3 Add Tool
        div.overviewcard-form 
          include details_page/tools/tool_create_form.pug
      // Add Material Form
      div.overviewcard
        div.overviewcard-title 
          h3 Add Material 
        div.overviewcard-form 
          include details_page/materials/material_create_form.pug
    
    div.main-cards
      // Budget Section
      div.card 
        h3 Budget
        include details_page/budget/details_budget.pug
      // Tools List Section
      div.card 
        h3 Tools
        include details_page/tools/tool_list.pug
      // Materials List Section
      div.card
        h3 Materials
        include details_page/materials/materials_list.pug
    